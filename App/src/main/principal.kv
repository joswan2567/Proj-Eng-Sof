<TextInputPopup>:
    title: "Editar"
    size_hint: None, None
    size: 300, 500
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation:'horizontal'
            Label:
                text: "ID"
                color:
            Label:
                text: str(root.id)
                color:
        Label:
            text: "Nome"
            color:
        TextInput:
            id: nome
            text: root.nome
        Label:
            text: "Telefone"
            color:
        TextInput:
            id: telefone
            text: root.telefone
        Label:
            text: "CPF"
            color:
        TextInput:
            id: cpf
            text: root.cpf
        Label:
            text: "Email"
            color:
        TextInput:
            id: email
            text: root.email        
        BoxLayout:
            orientation:'horizontal'
            Button:
                size_hint: 1, 1
                text: "Salvar"
                on_release:
                    root.nome = nome.text
                    root.telefone = telefone.text
                    root.cpf = cpf.text
                    root.email = email.text
                    root.save(app.root.ids.telaclilistar)
                    root.dismiss()
            Button:
                size_hint: 1, 1
                text: "Cancelar"
                on_release: root.dismiss()


