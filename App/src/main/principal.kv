            pos:self.pos
            size: self.size
    BoxLayout:
        orientation:'vertical'
        padding: 20
        height: 25
        GridLayout:
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 8
            Label:
                text: "ID"
                color: "black"
            Label:
                text: "Nome"
                color: "black"
            Label:
                text: "Telefone"
                color: "black"     
            Label:
                text: "Função"
                color: "black"
            Label:
                text: "Turno"
                color: "black"
            Label:
                text: "Email"
                color: "black"
            Label:
                text: "Acesso"
                color: "black"
            Label:
                text: "Edit"
                color: "black"
        GridLayout:
            size_hint: 1, None
            size_hint_y: None
            height: 25
            cols: 8
            Label:
                text: "ID"
            Label:
                text: "Nome"
            Label:
                text: "Telefone"
            Label:
                text: "Função"
            Label:
