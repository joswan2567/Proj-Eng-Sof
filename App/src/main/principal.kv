            orientation:'vertical'

            GridLayout:
                size_hint: 1, None
                size_hint_y: None
                height: 25
                cols: 2
                Label:
                    text: "Editar"
                    size_hint: .5, 1
                Label:
                    text: "Deletar"
                    size_hint: .5, 1
            RecycleView:
                id: bt_act
                viewclass: 'ButtonActions'
                data: [{'id': x } for x in range(int(len(root.data_items)/6))]
                SelectableRecycleGridLayout:
                    cols: 1
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    #orientation: 'vertical'
                    multiselect: True
                    touch_multiselect: True
        RoundedButton:
            text: "Voltar"
            size_hint: 0.3, 0.3
            pos_hint: {"center_x": 0.5}
            on_press: app.root.current="telacli"

<ButtonActions>:
    # size: '100dp','100dp'
    size: 200,100
    size_hint: None, None
    Button:
        size_hint: .2, 1
        text: ""
        color:
        on_press: 
            # print(f'dados: ${app.root.data_items[root.id*6:(root.id*6)+6]} id:${root.id}')
            root.edit(root.id*6)
        Image:
            source: "../../assets/icons/edit1.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Button:
        size_hint: 0.2, 1
        text: ""
        color:
        on_press: 
            # print(f'dados: ${app.root.data_items[root.id*6:(root.id*6)+6]} id:${root.id}')
            root.delete(root.id*6,app.root)

        Image:
            source: "../../assets/icons/delete1.png"
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    


