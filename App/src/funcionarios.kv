
<MyLayout>   
    do_default_tab: False
    nome: nome
    telefone: telefone
    email: email
    funcao: funcao
    turno: turno    

    TabbedPanelItem:
        text: "Cadastrar"
        
        GridLayout:
            cols:1
            size: root.width, root.height
            padding: 30
            spacing: 20           

            GridLayout:
                cols:2
                size: root.width, root.height
                padding: 20
                spacing: 10

                Label:
                    text: "Nome"
                TextInput:
                    id: nome
                    multiline:False

                Label:
                    text: "Telefone"
                TextInput:
                    id: telefone
                    multiline:False

                Label:
                    text: "E-mail"
                TextInput:
                    id: email
                    multiline:False

                Label:
                    text: "Turno"
                TextInput:
                    id: turno
                    multiline:False

                Label:
                    text: "Função"
                TextInput:
                    id: funcao
                    multiline:False
                
            Button:
                text: "Confirmar"
                size_hint: (None,None)   
                width: 500
                height: 100      
                on_press: root.inserirDB()
        
            Button:
                text: "Cancelar"
                pos_hint: {'center_x': 0.5}
                size_hint: (None,None)   
                width: 500
                height: 100  
    
    TabbedPanelItem:
        text: "Editar"

        GridLayout:
            cols:1
            size: root.width, root.height
            padding: 30
            spacing: 20
            

            GridLayout:
                cols:2
                padding: 20
                spacing: 10

               
                Label:
                    text: "Nome"
                TextInput:
                    id: nome
                    multiline:False
                Label:
                    text: "Telefone"
                TextInput:
                    id: telefone
                    multiline:False
                Label:
                    text: "E-mail"
                TextInput:
                    id: email
                    multiline:False
                Label:
                    text: "Turno"
                TextInput:
                    id: turno
                    multiline:False
                Label:
                    text: "Função"
                TextInput:
                    id: funcao
                    multiline:False
            Button:
                text: "Confirmar"
                size_hint: (None,None)   
                width: 500
                height: 100      
                on_press: root.editarDB()
            

            Button:
                text: "Cancelar"
                pos_hint: {'center_x': 0.5}
                size_hint: (None,None)   
                width: 500
                height: 100 
    
    TabbedPanelItem:
        text: "Deletar"
        GridLayout:
            cols:1
            size: root.width, root.height
            padding: 120
            spacing: 20
                       

            GridLayout:
                cols:2
                padding: 20
                spacing: 10
        
                Label:
                    text: "Nome"
                TextInput:
                    id: nome
                    multiline:False
                     
                               
            Button:
                text: "Confirmar"
                size_hint: (None,None)   
                width: 500
                height: 100     
                on_press: root.deletarDB()
            

            Button:
                text: "Cancelar"
                pos_hint: {'center_x': 0.5}
                size_hint: (None,None)   
                width: 500
                height: 100  
     
   
